@model EditUserViewModel
@{ 
    ViewBag.Title = "Edit User";
}
<h2>Edit User</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" style="width:auto">Update</button>
        <a asp-controller="Adminstration" asp-action="ListOfUsers" class="btn btn-primary" style="width:auto">Cancel</a>
    </div>
</form>
<div class="card">
    <div class="card-header">
        <h3>Users Roles</h3>
    </div>
    <div class="card-body">
        @if (Model.Roles.Any())
        {
            foreach (var role in Model.Roles)
            {
                <h5 class="card-title">@role</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at this moment</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="Adminstration" asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">Manage Roles</a>
    </div>
</div>
<div class="card mt-2">
    <div class="card-header">
        <h3>User Claims</h3>
    </div>
    <div class="card-body">
        @if (Model.Claims.Any())
        {
            foreach (var claim in Model.Claims)
            {
                <h5 class="card-title">@claim</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at this moment</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="Adminstration" asp-action="ManageUserClaims" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">Manage Claims</a>
    </div>
</div>