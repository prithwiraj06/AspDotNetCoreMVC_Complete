@model EditRoleViewModel
@{ 
    ViewBag.Title = "Edit Role";
}
<h2>Edit Role</h2>
<form class="mt-3" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="text-danger" asp-validation-summary="All"></div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <button class="btn btn-primary" style="width:auto" type="submit">Update</button>
            <a asp-controller="Adminstration" asp-action="ListOfRoles" class="btn btn-primary">Cancel</a>
        </div>        
    </div>
    <div class="card">
        <div class="card-header">Users in this role</div>
        <div class="card-body">
            @if(Model.UserNames.Any())
            {
                foreach(var name in Model.UserNames)
                {
                    <h5 class="card-title">@name</h5>
                }
            }
            else
            {
                <h5 class="card-title">No users in this role</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-controller="Adminstration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" style="width:auto">Add or remove user</a>
        </div>
    </div>
</form>